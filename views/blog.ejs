<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="The official website for all things related to MilkGames and his amazing projects. *cough cough*">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
  <title>MilkGames Blog</title>
  <script src="/timeago.min.js"></script>
  <meta name="flattr:id" content="zlnq5z">
  <meta name="description" content="The official website for all things related to MilkGames and his amazing projects. *cough cough*">
  <!-- Google / Search Engine Tags -->
  <meta itemprop="name" content="MilkGames">
  <meta itemprop="description" content="The official website for all things related to MilkGames and his amazing projects. *cough cough*">
  <!-- Facebook Meta Tags -->
  <meta property="og:url" content="https://milkgames.pw">
  <meta property="og:type" content="website">
  <meta property="og:title" content="MilkGames">
  <meta property="og:description" content="The official website for all things related to MilkGames and his amazing projects. *cough cough*">
  <!-- Twitter Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="MilkGames">
  <meta name="twitter:description" content="The official website for all things related to MilkGames and his amazing projects. *cough cough*">
  <meta name="mobile-web-app-capable" content="yes">
  <link rel="shortcut icon" href="images/favicon.png">
  <script src="//hcaptcha.com/1/api.js" async defer></script>
  <% include partials/required.ejs %>
</head>
<body>

  <% include partials/header.ejs %>

  <div id="main">

  <div class="ui main text container">
    <h1 class="ui inverted header">Blog</h1>
    <% if (blog.length == 0) { %>
      <div class="ui inverted placeholder segment">
        <div class="ui icon header">
          <i class="rss icon"></i>
          No blog posts yet.
        </div>
      </div>
      <% } %>
      <div class="ui inverted cards">
    <% for(var i=0; i < blog.length; i++) { %>
<div class="ui card" >
  <div class="content">
    <a class="header" href="/blog/post/<%= blog[i].id %>"><%= blog[i].title %></a>
    <div class="timestamp meta" datetime="<%= blog[i].time * 1000 %>"></div>
    <div class="description">
      <% if (blog[i].body.length > 64) { %>
      <p><%= blog[i].body.slice(0, 65) + "..." %></p>
      <% } else { %>
      <p><%= blog[i].body %></p>
      <% } %>
    </div>
  </div>
</div>
    <% } %>
</div>
</div>
<script>timeago.render(document.querySelectorAll('.timestamp'));</script>
</body>
</html>
